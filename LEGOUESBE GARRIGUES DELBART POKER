import random

class joueur:

  def __init__(self,nom="Ez",tapis=1000):
    self.nom=nom
    self.main = []
    self.tapis = tapis #Jetons de chaque joueur = attribut
    self.combinaison = None

  def evaluer(self):#prendre la meileure combinaison
    self.combinaison
    
  def nouvelle_donne(self):#modifier l'attribut main
    self.main.clear()

  def recevoir_cartes(self):#Ajoutez des cartes à main
    for i in range(2):
      self.main.append(self.paquet)

